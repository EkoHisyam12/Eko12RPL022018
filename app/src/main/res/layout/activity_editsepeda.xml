<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".editsepeda">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.AppCompat.Light.DarkActionBar"
        android:background="#0d0f11"
        app:title="Edit Data Sepeda"
        app:menu="@menu/adddata_edit"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#393b44">

        <ImageView
            android:id="@+id/iv"
            android:cropToPadding="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/logo"/>

        <TextView
            android:text="Tap Image Untuk Ganti Gambar"
            android:textColor="#fff"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/eid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="40dp"
            android:text="Id : "
            android:textColor="#fff"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:background="#23283a"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul post"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="5dp"
                android:textSize="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"/>

            <EditText
                android:inputType="text"
                android:focusable="true"
                android:textColor="#fff"
                android:id="@+id/esjudul"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:background="#23283a"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="5dp"
                android:textSize="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"/>

            <EditText
                android:inputType="text"
                android:focusable="true"
                android:textColor="#fff"
                android:id="@+id/eskode"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:background="#23283a"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merk"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="5dp"
                android:textSize="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"/>

            <EditText
                android:inputType="text"
                android:focusable="true"
                android:textColor="#fff"
                android:id="@+id/esmerk"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:background="#23283a"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="5dp"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"/>

            <EditText
                android:textSize="15dp"
                android:inputType="text"
                android:focusable="true"
                android:id="@+id/esjenis"
                android:layout_marginTop="15dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:background="#23283a"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="5dp"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"/>

            <EditText
                android:focusable="true"
                android:id="@+id/esharga"
                android:inputType="number"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
            </EditText>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>